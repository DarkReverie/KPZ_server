<UserControl x:Class="WPF_2.Controls.ShopItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_2.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Label Content="Name:"/>
            <TextBox Text="{Binding ShopItem.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Description:"/>
            <TextBox Text="{Binding ShopItem.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Price:"/>
            <TextBox Text="{Binding ShopItem.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Stock Quantity:"/>
            <TextBox Text="{Binding ShopItem.StockQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</UserControl>